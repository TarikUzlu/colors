<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/black"
    android:textAlignment="center"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonPurple"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/purple_200"
        android:text="PURPLE"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonOrange"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonOrange" />

    <Button
        android:id="@+id/buttonOrange"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="21dp"
        android:backgroundTint="@android:color/holo_orange_dark"
        android:text="ORANGE"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/buttonPurple"
        app:layout_constraintStart_toEndOf="@+id/buttonYellow"
        app:layout_constraintTop_toBottomOf="@+id/buttonGreen" />

    <Button
        android:id="@+id/buttonYellow"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="17dp"
        android:backgroundTint="@android:color/holo_orange_light"
        android:text="YELLOW"
        android:textSize="15sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonOrange"
        app:layout_constraintEnd_toStartOf="@+id/buttonOrange"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonBlue"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:backgroundTint="@android:color/holo_blue_bright"
        android:text="BLUE"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonGreen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonGreen" />

    <Button
        android:id="@+id/buttonGreen"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginTop="255dp"
        android:layout_marginEnd="21dp"
        android:backgroundTint="@android:color/holo_green_dark"
        android:text="GREEN"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/buttonBlue"
        app:layout_constraintStart_toEndOf="@+id/buttonRed"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonRed"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="17dp"
        android:backgroundTint="@android:color/holo_red_dark"
        android:text="RED"
        android:textSize="24sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonGreen"
        app:layout_constraintEnd_toStartOf="@+id/buttonGreen"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="84dp"
        android:layout_marginBottom="36dp"
        android:ems="10"
        android:hint="Type a Color"
        android:inputType="textPersonName"

        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/buttonGo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonGo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="521dp"
        android:backgroundTint="@color/black"
        android:text="GO"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText" />
</androidx.constraintlayout.widget.ConstraintLayout>